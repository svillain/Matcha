{% extends 'layout.twig' %}

{% block styles %}
    <style>
        .list > li:hover {
            cursor: auto;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="main main-raised">
            <div class="section">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="people-list" id="people-list">
                                <ul id="matchList" class="list"></ul>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div id="currentChat" class="chat">
                                <div class="chat-header clearfix">
                                    <img id="chat-img" width="50" height="50" src="" alt="avatar"/>
                                    <div class="chat-about">
                                        <div id="chat-with" class="chat-with"><a href="#"></a></div>
                                        <div id="chat-num-messages" class="chat-num-messages"></div>
                                    </div>
                                </div>
                                <div class="chat-history">
                                    <ul id="chat-history">

                                    </ul>
                                </div>
                                <div class="chat-message clearfix">
                                    <textarea maxlength="255" id="message-to-send" placeholder="Type your message"></textarea>
                                    <button id="message-button">Send</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script src="/assets/js/chat.js" type="text/javascript"></script>
{% endblock %}