{% extends 'layout.twig' %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-md-7 ml-auto mr-auto">
                <div class="brand">
                    <div class="card card-nav-tabs">
                        <div class="card-body">
                            <h2>Reset your password</h2>
                            <form class="form" method="POST" action="{{ path_for('reset', {id:user.reset}) }}">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                                        <span class="input-group-text">
                                                          <i class="material-icons">vpn_key</i>
                                                        </span>
                                        </div>
                                        <input name="r_password" type="password" class="form-control"
                                               placeholder="Your new password" value="{{ old.r_password }}">
                                    </div>
                                    {% if errors.r_password %}
                                        <div class="d-block text-left text-danger">{{ errors.r_password | first }}</div>{% endif %}
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                                        <span class="input-group-text">
                                                          <i class="material-icons">vpn_key</i>
                                                        </span>
                                        </div>
                                        <input name="r_password_verify" type="password" class="form-control"
                                               placeholder="Your new password verification" value="{{ old.r_password_verify }}">
                                    </div>
                                    {% if errors.r_password_verify %}
                                        <div class="d-block text-left text-danger">{{ errors.r_password_verify | first }}</div>{% endif %}
                                </div>
                                <div class="footer text-center">
                                    <button type="submit" class="btn btn-primary py-3 btn-lg">Change</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}